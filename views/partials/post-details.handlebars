<section class="card">
  <a href="/post/{{id}}">
    <header>{{title}}</header>

    <div class="card-body">
      <p>{{ content }}</p>
      <p>By: {{ user.username }} {{date_created}}</p>
      <p><button class="btn btn-secondary" id="delete" data-id="{{id}}">Delete</button></p>
      <p><button class="btn btn-secondary" id="comments" data-id="{{id}}">View Comments</button></p>
    </div>
  </a>
</section>

<script src="/js/delete.js"></script>